{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Wrangler Dev Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/wrangler",
      "args": ["dev", "--inspect"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "WRANGLER_LOG": "debug"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "presentation": {
        "hidden": false,
        "group": "wrangler",
        "order": 1
      }
    },
    {
      "name": "Debug Worker (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "wrangler",
        "order": 2
      }
    },
    {
      "name": "Run Miniflare",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/miniflare",
      "args": [
        "--script",
        "src/index.ts",
        "--modules",
        "--port",
        "8787",
        "--inspect"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "hidden": false,
        "group": "miniflare",
        "order": 1
      }
    },
    {
      "name": "Debug TypeScript (ts-node)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": ["${workspaceFolder}/src/index.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "presentation": {
        "hidden": false,
        "group": "typescript",
        "order": 1
      }
    },
    {
      "name": "Debug Tests (Jest)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--no-coverage",
        "--detectOpenHandles"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    },
    {
      "name": "Debug Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--no-coverage",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 2
      }
    },
    {
      "name": "Debug Vitest",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": [
        "run",
        "--no-coverage"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Worker & Debug",
      "configurations": [
        "Debug Wrangler Dev Server"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "compound",
        "order": 1
      }
    }
  ]
}